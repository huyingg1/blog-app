<div class="edit-article">
  <h2>Edit Article</h2>
  <form id="edit-article-form">
    <div>
      <label for="title">Title</label>
      <input
        type="text"
        id="title"
        name="title"
        value="{{article.title}}"
        required
      />
    </div>
    <div>
      <label for="content">Content</label>
      <textarea
        id="content"
        name="content"
        required
      >{{article.content}}</textarea>
    </div>
    <button type="submit">Update</button>
  </form>
</div>

<script src="/js/edit-article.js" defer></script>